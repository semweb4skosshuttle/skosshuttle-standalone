#General
#needed by SKOS Shuttle to understand it is in docker:
export INDOCKER=1 
SKS_DEFAULT_SERVER_NAME=dockerxyz

#Instruct a container on the running host IP:
DOCKERHOST=10.0.1.130

#use for internal doc download (unitsofmeasure.rdf)
#a non ssl base URI (or use an appropriate SSL certificate)
SKS_HTTPSERVER_DEFAULT_BASEURL=http://$DOCKERHOST:8080

MYTIMEZONE=Europe/Zurich
MYSQL_DEFAULT_DATADIR=/var/lib/mysql
MYSQL_DEFAULT_LOGDIR=/var/log/mysql
MYSQL_DEFAULT_CONFDIR=/etc/mysql/conf.d

#Database
